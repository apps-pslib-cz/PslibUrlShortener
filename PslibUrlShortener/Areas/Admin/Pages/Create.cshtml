@page
@model PslibUrlShortener.Areas.Admin.Pages.CreateModel
@{
    ViewData["Title"] = "Nový odkaz (admin)";
    var breadcrumbs = new List<(string, string?)> {
        ("Administrace", Url.Page("Index", new { area = "Admin" })),
        ("Nový", null)
    };
}
<partial name="/Pages/Shared/_Breadcrumbs.cshtml" model="breadcrumbs" />

<h1>@ViewData["Title"]</h1>

<form method="post" class="row g-3">
    <div class="col-12">
        <label asp-for="TargetUrl" class="form-label">Cílová URL</label>
        <input asp-for="TargetUrl" class="form-control" placeholder="https://example.com/cesta" />
        <span asp-validation-for="TargetUrl" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CustomCode" class="form-label">Vlastní kód (volitelné)</label>
        <input asp-for="CustomCode" class="form-control" placeholder="nechte prázdné pro automatické vygenerování" />
        <small class="text-muted">Povoleno: a–z, 0–9, doporučeno 6–8 znaků.</small>
        <span asp-validation-for="CustomCode" class="text-danger"></span>
    </div>

    <div class="col-md-6 d-flex align-items-end">
        <div class="form-check">
            <input asp-for="IsEnabled" class="form-check-input" type="checkbox" id="IsEnabled" />
            <label class="form-check-label" for="IsEnabled">Povoleno</label>
        </div>
    </div>

    <div class="col-md-6">
        <label class="form-label" for="ActiveFromLocal">Aktivní od (místní čas)</label>
        <input class="form-control" type="datetime-local" id="ActiveFromLocal" name="ActiveFromLocal" />
    </div>

    <div class="col-md-6">
        <label class="form-label" for="ActiveToLocal">Aktivní do (místní čas)</label>
        <input class="form-control" type="datetime-local" id="ActiveToLocal" name="ActiveToLocal" />
    </div>

    <div class="col-md-6">
        <label asp-for="Title" class="form-label">Titulek (volitelné)</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="Note" class="form-label">Poznámka (volitelné)</label>
        <input asp-for="Note" class="form-control" />
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Vytvořit</button>
        <a asp-area="Admin" asp-page="Index" class="btn btn-secondary">Zpět</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}