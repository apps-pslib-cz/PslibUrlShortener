@page
@model PslibUrlShortener.Areas.Admin.Pages.Owners.IndexModel
@{
    ViewData["Title"] = "Vlastníci";

    var pageNo = Model.PageNo ?? 1;
    var pageSize = Model.PageSize ?? Model.ListingOptions.DefaultPageSize;
    var first = (Model.TotalCount == 0) ? 0 : (pageNo - 1) * pageSize + 1;
    var last = Math.Min(pageNo * pageSize, Model.TotalCount);

    var breadcrumbs = new List<(string, string?)> {
        ("Administrace", Url.Page("../Index")),
        ("Vlastníci", null)
    };
}
<partial name="/Pages/Shared/_Breadcrumbs.cshtml" model="breadcrumbs" />

<h1 class="mb-3">@ViewData["Title"]</h1>

<div>
    <form method="get" class="d-flex gap-2 align-items-end flex-wrap mb-3">
        <div>
            <label for="Search" class="form-label">Hledat</label>
            <input id="Search" type="text" name="Search" value="@Model.Search" class="form-control"
                   placeholder="jméno, e-mail nebo Sub…" />
        </div>

        <input type="hidden" name="PageSize" value="@pageSize" />
        <input type="hidden" name="OrderBy" value="@Model.OrderBy" />
        <button type="submit" class="btn btn-primary">Filtrovat</button>
        <a asp-page="./Index"
           asp-route-PageSize="@pageSize"
           asp-route-OrderBy="@Model.OrderBy"
           class="btn btn-secondary">Reset</a>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th aria-sort="@(Model.OrderBy == "NameDesc" ? "descending" : (Model.OrderBy == "NameAsc" ? "ascending" : "none"))">
                    <a asp-page="./Index"
                       asp-route-Search="@Model.Search"
                       asp-route-PageSize="@pageSize"
                       asp-route-OrderBy="@(Model.OrderBy == "NameAsc" ? "NameDesc" : "NameAsc")">
                        Jméno
                        @if (Model.OrderBy == "NameAsc")
                        {
                            <span aria-hidden="true">↑</span>
                        }
                        else if (Model.OrderBy == "NameDesc")
                        {

                            <span aria-hidden="true">↓</span>
                        }
                    </a>
                </th>

                <th aria-sort="@(Model.OrderBy == "EmailDesc" ? "descending" : (Model.OrderBy == "EmailAsc" ? "ascending" : "none"))">
                    <a asp-page="./Index"
                       asp-route-Search="@Model.Search"
                       asp-route-PageSize="@pageSize"
                       asp-route-OrderBy="@(Model.OrderBy == "EmailAsc" ? "EmailDesc" : "EmailAsc")">
                        E-mail
                        @if (Model.OrderBy == "EmailAsc")
                        {
                            <span aria-hidden="true">↑</span>
                        }
                        else if (Model.OrderBy == "EmailDesc")
                        {

                            <span aria-hidden="true">↓</span>
                        }
                    </a>
                </th>

                <th>Sub</th>

                <th aria-sort="@(Model.OrderBy == "LinksAsc" ? "ascending" : "none")">
                    <a asp-page="./Index"
                       asp-route-Search="@Model.Search"
                       asp-route-PageSize="@pageSize"
                       asp-route-OrderBy="@(Model.OrderBy == "LinksAsc" ? "LinksDesc" : "LinksAsc")">
                        Počet odkazů
                        @if (Model.OrderBy == "LinksAsc")
                        {
                            <span aria-hidden="true">↑</span>
                        }
                        else if (Model.OrderBy == "LinksDesc")
                        {

                            <span aria-hidden="true">↓</span>
                        }
                    </a>
                </th>

                <th>Aktualizováno</th>
                <th>Akce</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Items.Any())
            {
                <tr><td colspan="6" class="text-center">Žádný vlastník k zobrazení.</td></tr>
            }
            else
            {
                @foreach (var row in Model.Items)
                {
                    <tr>
                        <td>@row.DisplayName</td>
                        <td>@row.Email</td>
                        <td><code>@row.Sub</code></td>
                        <td class="text-end">@row.LinksCount</td>
                        <td>@row.UpdatedAtUtc.ToString("g")</td>
                        <td>
                            <div class="btn-group">
                                <!-- Zatím jen proklik na seznam odkazů s předfiltrováním (pokud chcete) -->
                                <a asp-area="Admin"
                                   asp-page="../Links/Index"
                                   asp-route-Owner="@row.DisplayName"
                                   class="btn btn-sm btn-primary" title="Zobrazit odkazy vlastníka">
                                    <i class="bi bi-link-45deg"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>

        <tfoot>
            <tr>
                <td>
                    @first – @last z @Model.TotalCount
                </td>
                <td colspan="4" class="text-end">
                    <pagination page-no="@(pageNo)"
                                page-size="@(pageSize)"
                                total-count="@Model.TotalCount"
                                page="./Index"
                                route-values="@(new Dictionary<string,string?> {
                                                                { "Search", Model.Search },
                                                                { "OrderBy", Model.OrderBy }
                                                            })">
                    </pagination>
                </td>
                <td class="text-end">
                    <pagesize-selector page-size="@(pageSize)"
                                       sizes="@(Model.PageSizeNumbers)"
                                       page-no="@(pageNo)"
                                       page="./Index"
                                       route-values="@(new Dictionary<string,string?> {
                                                                              { "Search", Model.Search },
                                                                              { "OrderBy", Model.OrderBy }
                                                                          })">
                    </pagesize-selector>
                </td>
            </tr>
        </tfoot>
    </table>
</div>