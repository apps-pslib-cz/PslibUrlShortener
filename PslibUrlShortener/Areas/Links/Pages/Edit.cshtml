@page "{id:int}"
@model PslibUrlShortener.Areas.Links.Pages.EditModel
@{
    ViewData["Title"] = "Upravit odkaz";
    var breadcrumbs = new List<(string, string?)> {
        ("Odkazy", Url.Page("./Index")),
        ("Upravit", null)
    };
}
<partial name="/Pages/Shared/_Breadcrumbs.cshtml" model="breadcrumbs" />

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (Model.DeletedAtUtc is not null)
{
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Tento odkaz je aktuálně označen jako <strong>smazaný</strong>. Na seznamu jej můžete obnovit.
    </div>
}

<form method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Input.Id" />
    <input type="hidden" asp-for="Input.RowVersion" />

    <div class="row g-3">

        <div class="col-12 col-md-6">
            <label asp-for="Input.Code" class="form-label"></label>
            <input asp-for="Input.Code" class="form-control" />
            <span asp-validation-for="Input.Code" class="text-danger"></span>
            <div class="form-text">Změnou kódu se změní krátká adresa. Kód musí být jedinečný.</div>
        </div>

        <div class="col-12">
            <label asp-for="Input.TargetUrl" class="form-label"></label>
            <input asp-for="Input.TargetUrl" class="form-control" />
            <span asp-validation-for="Input.TargetUrl" class="text-danger"></span>
        </div>

        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-link-45deg fs-4"></i>
                        <div>
                            <div class="text-muted small">Krátká adresa</div>
                            <div id="short-url-preview" class="fw-semibold">@Model.ShortUrlPreview</div>
                            <div class="text-muted small mt-1">
                                Vytvořeno: @Model.CreatedAt.ToString("g")
                                @if (Model.LastAccessAtUtc is not null)
                                {
                                    <span class="ms-3">Naposledy použito: @Model.LastAccessAtUtc?.ToString("g")</span>
                                }
                                <span class="ms-3">Použití: <strong>@Model.Clicks</strong>x</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Input.IsEnabled" class="form-label d-block"></label>
            <div class="form-check form-switch">
                <input asp-for="Input.IsEnabled" class="form-check-input" />
                <label class="form-check-label" for="Input_IsEnabled">Aktivní</label>
            </div>
            <span asp-validation-for="Input.IsEnabled" class="text-danger"></span>
        </div>

        <div class="col-12 col-lg-6">
            <label asp-for="Input.ActiveFromUtc" class="form-label"></label>
            <input asp-for="Input.ActiveFromUtc" type="datetime-local" class="form-control" />
            <div class="form-text">Časy jsou brány jako UTC.</div>
            <span asp-validation-for="Input.ActiveFromUtc" class="text-danger"></span>
        </div>

        <div class="col-12 col-lg-6">
            <label asp-for="Input.ActiveToUtc" class="form-label"></label>
            <input asp-for="Input.ActiveToUtc" type="datetime-local" class="form-control" />
            <div class="form-text">Časy jsou brány jako UTC.</div>
            <span asp-validation-for="Input.ActiveToUtc" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Note" class="form-label"></label>
            <textarea asp-for="Input.Note" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Input.Note" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Uložit změny
        </button>
        <a asp-area="Links" asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Zpět
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
          const codeInput = document.getElementById('Input_Code');
          const previewEl = document.getElementById('short-url-preview');
          const baseUrl   = '@($"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}")';

          function buildPreview() {
            const c = (codeInput?.value || '').trim() || '••••••';
            previewEl.textContent = baseUrl.replace(/\/+$/, '') + '/' + c;
          }

          codeInput?.addEventListener('input', buildPreview);
          buildPreview();
        })();
    </script>
}