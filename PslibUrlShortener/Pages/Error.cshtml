@page
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Nastala chyba";
    var requestId = HttpContext?.TraceIdentifier;
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning d-flex align-items-start" role="alert">
                <div class="me-3 fs-3">⚠️</div>
                <div>
                    <h1 class="h4 mb-2">Jejda, něco se pokazilo</h1>
                    <p class="mb-2">Na naší straně došlo k chybě. Zkuste akci opakovat nebo se vraťte později.</p>
                    <div class="small text-muted">ID požadavku: <code>@requestId</code></div>
                    <div class="mt-3">
                        <a class="btn btn-primary" href="/">Zpět na domovskou stránku</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>